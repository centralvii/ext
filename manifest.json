{
    "manifest_version": 3,
    "name": "Dark Theme Extension",
    "version": "1.0",
    "description": "Changes the color scheme of a page from light to dark.",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
        "default_title": "Toggle Dark Mode",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
