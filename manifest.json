{
    "manifest_version": 3,
    "name": "Dark Theme Extension",
    "version": "1.0",
    "description": "Changes the color scheme of a page from light to dark.",
    "permissions": ["activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Toggle Dark Mode"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
